{
  "name": "ra-data-simple-prisma",
  "version": "4.0.0",
  "description": "Simple react-admin dataprovider for prisma, supporting audit logs and roles",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --treeshake",
    "dev": "pnpm build --watch",
    "lint": "eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "prepublish": "pnpm build",
    "test": "jest"
  },
  "files": [
    "/dist"
  ],
  "keywords": [
    "prisma",
    "rest",
    "marmelab",
    "react-admin",
    "dataprovider",
    "audit-log",
    "audit",
    "admin",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/codeledge/ra-data-simple-prisma.git",
    "directory": "packages/ra-data-simple-prisma"
  },
  "author": "Orlando Groppo <orlando.groppo@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@prisma/client": ">=3"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "deepmerge": "^4.3.1",
    "deverything": "^0.28.1",
    "set-value": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.7.0",
    "eslint-config-custom": "workspace:*",
    "jest": "^29.7.0",
    "react-admin": "^4.14.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
